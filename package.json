{
  "name": "@saucelabs/puppeteer-replay-runner",
  "version": "0.0.0",
  "description": "Replays Chrome DevTools recordings on Sauce Labs",
  "main": "lib/index.js",
  "type": "module",
  "files": [
    "lib"
  ],
  "private": true,
  "author": {
    "name": "devx",
    "email": "devx@saucelabs.com",
    "url": "https://www.saucelabs.com"
  },
  "scripts": {
    "lint": "prettier --check '**/*.{js,ts,mjs,cjs}' && eslint src/**",
    "fmt": "prettier --write '**/*.{js,ts,mjs,cjs}'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "watch": "tsc -w",
    "prebundle": "npm run build",
    "bundle": "bash scripts/bundle.sh",
    "release": "release-it --github.release",
    "release:ci": "npm run release -- --ci --npm.skipChecks --no-git.requireCleanWorkingDir",
    "release:patch": "npm run release -- patch",
    "release:minor": "npm run release -- minor",
    "release:major": "npm run release -- major"
  },
  "license": "MIT",
  "dependencies": {
    "@puppeteer/replay": "3.0.0",
    "puppeteer": "22.13.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.14.11",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.0",
    "prettier": "^3.3.3",
    "release-it": "^17.6.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.1"
  }
