{
    "git": {
        "commit": false,
        "tag": true,
        "tagName": "v${version}"
    },
    "npm": {
        "publish": false,
        "ignoreVersion": true
    },
    "github": {
        "release": true,
        "draft": true,
        "releaseName": "v${version}"
    },
    "hooks": {
        "after:release": "echo v${version} > version.txt"
    }
}
